    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet" />
    <style>
        .fa-select {
            font-family: 'Lato', 'Font Awesome 5 Free';
            font-weight: 900;
        }
    </style>
}
<div class="subheader">
    <h1 class="subheader-title">
        <i class='fal fa-calendar-alt'></i> Clasificadores
    </h1>
</div>

<form name="mdmForm" id="mdmForm" ng-app="AppAdministracion" ng-cloak ng-controller="crtlClasificadores" ng-submit="mdmForm.$valid && ValidarAccion()">
    <div id="tablaInicial" style="display:block">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Acciones<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#" data-toggle="tooltip" data-backdrop="static" data-keyboard="false" data-target="#default-example-modal-lg" ng-click=NuevoAgrupador()><i class="fal fa-plus"></i></a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="fs-lg fw-300 p-5 bg-white border-faded rounded mb-g">
            <div class="panel-container show">
                <div class="panel-content">
                    <p>
                        <table id="dt-resumen" class="table table-bordered table-hover table-striped w-100 tablaPSRPrincipal">
                            <thead>
                                <tr>
                                    <th class="not-export-col">Editar</th>
                                    <th>Agrupador</th>
                                    <th>Clasificador</th>
                                    <th>Descripción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="tabla in tablaAgrupadoresClasificadores">
                                    <td align="center">
                                        <a href='#' ng-click="ValidarTarea(tabla, 'Actualizar')" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#default-example-modal-lg" class='btn btn-sm btn-outline-primary btn-icon btn-inline-block mr-1' title='Editar'><i class='fal fa-edit'></i></a>
                                    </td>
                                    <td align="center">{{tabla.nombreAgrupador }}</td>
                                    <td align="center">{{tabla.nombreClasificador}}</td>
                                    <td align="center">{{tabla.descripcionClasificador}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div id="nuevoFormulario" style="display:none">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Acciones<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#" data-toggle="modal" data-backdrop="static" data-keyboard="false" data-target="#default-example-modal-lg" ng-click=MostrarListado()><i class="fal fa-align-justify"></i></a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="modal hide fade" id="frmAgrupador" style="z-index: 6000;">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header text-white bg-primary-500">
                        <h5 class="modal-title">Agrupadores</h5>
                    </div>
                    <div class="modal-body">
                        <div class="form-row row align-items-center">
                            <div class="col-12 col-lg-12">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Nuevo Agrupador</div>
                                    </div>
                                    <input type="text" autocomplete="off" ng-model=catAgrupador.nombreAgrupador class="form-control" placeholder="Nuevo agrupador">
                                    <button type="button" class="btn btn-primary" ng-click=agregarAgrupador()>Agregar</button>
                                </div>
                            </div>
                        </div>
                        <div class="panel-tag">
                            Agrupador
                        </div>
                        <div class="form-row row align-items-center">
                            <div class="col-12 col-lg-12">
                                <table id="dt-resumen" class="table table-bordered table-hover table-striped w-100">
                                    <thead>
                                        <tr>
                                            <th>Editar</th>
                                            <th>Nombre</th>
                                            <th>Fecha alta</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="tablaAgrupador in tablaAgrupadores">
                                            <td align="center">
                                                <a href='#' ng-click="ValidarMotivoDiaInhabil(tablaAgrupador, 'Actualizar')" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#frmMotivosCambios" class='btn btn-sm btn-outline-primary btn-icon btn-inline-block mr-1' title='Editar'><i class='fal fa-edit'></i></a>
                                            </td>
                                            <td>{{tablaAgrupador.nombreAgrupador}}</td>
                                            <td>{{tablaAgrupador.FechaInicio.replace('/Date(','').replace(')/','') | date:"dd/MM/yyyy" }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="col-lg-12">
                            <div class="frame-wrap">
                                <button type="button" ng-click="CerrarModal()" class="btn btn-primary">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal hide fade" id="frmIcono" style="z-index: 6000;">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header text-white bg-primary-500">
                        <h5 class="modal-title">Iconos</h5>
                    </div>
                    <div class="modal-body">
                        <div class="input-group input-group-lg mb-3">
                            <input type="text" class="form-control shadow-inset-2" id="filter-icon" aria-label="type 2 or more letters">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fal fa-search"></i></span>
                            </div>
                        </div>
                        <div class="card pt-3 pr-3 pb-0 pl-3">
                            <div id="icon-list" class="row"></div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="col-lg-12">
                            <div class="frame-wrap">
                                <button type="button" ng-click="CerrarIconos()" class="btn btn-primary">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="fs-lg fw-300 p-5 bg-white border-faded rounded mb-g">

            <div class="panel-tag">
                Agrupador
            </div>
            <div class="form-row row align-items-center">
                <div class="col-12 col-lg-12">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text  ">Tipo de Agrupador&nbsp <abbr title="Requerido" class="text-danger">*</abbr></div>
                        </div>
                        <div id="s2-container-good">

                            <select class="form-control" id="lstAgrupadores"
                                    ng-options="tablas as tablas.nombreAgrupador for tablas in tablaAgrupadores"
                                    ng-model="lstSelectAgrupadores" required>
                                <option value="">--Seleccione una opción--</option>
                            </select>

                        </div>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-backdrop="static" data-keyboard="false" data-target="#frmAgrupador">Nuevo Agrupador</button>
                    </div>
                </div>

            </div>
            <div class="panel-tag">
                Etiquetas
            </div>
            <div class="form-row row align-items-center">
                <div class="col-12 col-lg-12">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text  ">Nombre&nbsp <abbr title="Requerido" class="text-danger">*</abbr></div>
                        </div>
                        <input type="text" class="form-control" autocomplete="off" placeholder="Nombre de la etiqueta" required ng-model="modelnombreClasificador">
                    </div>
                </div>
                <div class="col-12 col-lg-12">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text  ">Descripcion&nbsp <abbr title="Requerido" class="text-danger">*</abbr></div>
                        </div>
                        <input type="text" class="form-control" autocomplete="off" placeholder="Descripción" required ng-model="modelDescripcionClasificador">
                    </div>
                </div>

                @*<div class="col-12 col-lg-12">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text  ">Icono</div>
                            </div>
                            <input type="file" id="selectPhotoIcono" ng-model="MmodelIconoClasificador" style="display: none;" onchange="angular.element(this).scope().cargaImagenRe(event)">
                            <input type="text" autocomplete="off" ng-model="modelIconoClasificador" class="form-control" placeholder="Icono">
                            <input type="button" value="Buscar" onclick="document.getElementById('selectPhotoIcono').click();" />
                        </div>
                    </div>*@

                <div class="col-12 col-lg-12">
                    <div class="input-group mb-2">
                        <div class="input-group flex-nowrap ">
                            <div class="input-group-prepend">
                                <div class="input-group-text  ">Icono&nbsp <abbr title="Requerido" class="text-danger">*</abbr> (<i id="addIcon"></i>)</div>
                            </div>
                            <input type="text" id="txtIcono" class="form-control" ng-model="modelIconoClasificador" autocomplete="off" placeholder="Icono" required>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-backdrop="static" data-keyboard="false" data-target="#frmIcono">Seleccionar</button>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-12">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text  ">Color&nbsp <abbr title="Requerido" class="text-danger">*</abbr></div>
                        </div>
                        <div id="s2-container-good">
                            <input type="text" id="color-picker" style=background-color:{{modelcolorFondo}} class="form-control" required ng-model="modelColorClasificador">
                        </div>
                    </div>
                </div>
            </div>




            <div class="form-row row align-items-center">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="frame-wrap">
                            <button type="submit" ng-show="btnGuardar" ng-click="ValidarAccion()" class="btn btn-primary">Guardar</button>
                            <button type="submit" ng-show="btnActualizar" ng-click="ValidarAccion()" class="btn btn-primary">Actualizar</button>
                            <button type="button" ng-show="btnEliminar" ng-click="EliminarObjetoNegocio()" class="btn btn-primary">Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
@section scripts{
    <script src="~/Assets/js/Forms/spectrum.min.js"></script>
    <script src="~/Assets/js/App/administracionApp.js"></script>
    <script src="~/Assets/js/App/AdministracionService.js"></script>
    <script src="~/Assets/js/App/AppControladores/Clasificadores/ClasificadoresController.js"></script>
    <script src="~/Assets/js/App/AppControladores/HomeController.js"></script>

    <script>
        $(document).ready(function () {
            $('#color-picker').spectrum({
                type: "text",
                showInput: "true",
                showInitial: "true",
                hideAfterPaletteSelect: true
            });
        })

        var prefix = "fal";
        var prefix_extend = "fa"
        var filename = "../Assets/js/Forms/fa-icon-list";

        $.getJSON(filename + ".json").then(function (data) {

            /*...worked*/
            var formatedDOMElms = [];

            /*compile DOM elements*/
            jQuery.each(data, function (index, item) {
                formatedDOMElms.push('<div class="col-4 col-sm-3 col-md-3 col-lg-2 col-xl-1 d-flex justify-content-center align-items-center mb-g">\
                                                    <a href="#" class="rounded bg-white p-0 m-0 d-flex flex-column w-100 h-100 js-showcase-icon shadow-hover-2" data-toggle="modal" data-target="#iconModal" data-filter-tags=' + item.substring(1) + '>\
                                                        <div class="rounded-top color-fusion-300 w-100 bg-primary-300">\
                                                            <div class="rounded-top d-flex align-items-center justify-content-center w-100 pt-3 pb-3 pr-2 pl-2 fa-3x hover-bg">\
                                                                <i class="' + prefix + ' ' + prefix_extend + item + '"></i>\
                                                            </div>\
                                                        </div>\
                                                        <div class="rounded-bottom p-1 w-100 d-flex justify-content-center align-items-center text-center">\
                                                            <span class="d-block text-truncate text-muted">' + item.substring(1) + '</span>\
                                                        </div>\
                                                    </a>\
                                                </div>');
            });

            /* append to HTML dom*/
            $('#icon-list').append(formatedDOMElms.join(" "));

            /*initialize filter*/
            initApp.listFilter($('#icon-list'), $('#filter-icon'));

            /*client event for each icon*/
            $('.js-showcase-icon').click(function () {
                var iconClass = $(this).find('i').attr('class');
                $("#addIcon").removeClass();
                $("#txtIcono").val(iconClass);
                //document.getElementById('txtIcono').innerHTML(iconClass);
                $("#addIcon").addClass(iconClass);
                $('#frmIcono').modal('hide');
            });

            /*copy icon button*/
            $('.js-icon-copy').click(function () {
                $('#js-icon-class').select();
                document.execCommand('copy');
            });

            /*add number of icons*/
            $('#filter-icon').attr('placeholder', "Buscar")

        }).fail(function () {
            console.log("failed")
        });

    </script>

}